{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "dependencyDashboard": true,
  "stabilityDays": 90,
  "prCreation": "not-pending",
  "additionalBranchPrefix": "deps/",
  "addLabels": [
    "type:dependency"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automergeStrategy": "rebase"
    }
  ]
}
